<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ly.david.mbjc">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MDJCApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicBrainzJetpackCompose">
        <activity
            android:name="ly.david.mbjc.ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MusicBrainzJetpackCompose">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Support deep-linking into an artist's screen -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/deeplink_artist"
                    android:scheme="@string/deeplink_schema" />
            </intent-filter>

            <!-- Support deep-linking into a release group -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/deeplink_release_group"
                    android:scheme="@string/deeplink_schema" />
            </intent-filter>

            <!-- Support deep-linking into a release -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/deeplink_release"
                    android:scheme="@string/deeplink_schema" />
            </intent-filter>
        </activity>
    </application>

</manifest>
