{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'helpers:pinGitHubActionDigests',
    ':semanticCommitTypeAll(chore)',
  ],
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
        'pin',
        'digest',
      ],
      automerge: true,
      automergeType: 'pr',
      platformAutomerge: true,
    },
    {
      groupName: 'Kotlin and Compose Compiler',
      groupSlug: 'kotlin',
      matchPackageNames: [
        'androidx.compose.compiler{/,}**',
        'org.jetbrains.kotlin:kotlin{/,}**',
      ],
    },
    // F-Droid buildserver issue: https://gitlab.com/fdroid/admin/-/issues/593
    {
      matchPackageNames: [
        'com.android.application',
        'com.android.library',
        'com.android.test',
        'com.android.tools.build:{/,}**',
      ],
      allowedVersions: '<8.11.0',
    },
    {
      description: 'Exclude alpha/beta/pre-release versions',
      matchPackageNames: [
        'com.mikepenz.aboutlibraries.plugin',
        'com.mikepenz:aboutlibraries-core',
        'com.mikepenz:aboutlibraries-compose-m3',
      ],
      allowedVersions: '!/-(alpha|beta|a\\d+|b\\d+|pre|rc|snapshot)/i',
    },
  ],
}
